@model Islem

<h1>İşlem Düzenle</h1>

<form asp-action="IslemDuzenle" method="post">
    <input type="hidden" asp-for="IslemID" />
    
    <div class="form-group">
        <label for="IslemAdi">İşlem Adı</label>
        <input type="text" class="form-control" id="IslemAdi" name="IslemAdi" asp-for="IslemAdi" required>
    </div>

    <div class="form-group">
        <label for="IslemUcreti">Ücret</label>
        <input type="number" class="form-control" id="IslemUcreti" name="IslemUcreti" asp-for="IslemUcreti" required>
    </div>

    <div class="form-group">
        <label for="IslemSuresi">İşlem Süresi (dakika)</label>
        <input type="number" class="form-control" id="IslemSuresi" name="IslemSuresi" asp-for="IslemSuresi" required>
    </div>

    <div class="form-group">
        <label for="CalisanID">Çalışan</label>
        <select class="form-control" id="CalisanID" name="CalisanID" asp-for="CalisanID" required>
            @foreach (var calisan in ViewBag.Calisanlar)
            {
                <option value="@calisan.CalisanID">@calisan.CalisanAd</option>
                   
                
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

<a href="/Islem/Index" class="btn btn-secondary">Geri</a>

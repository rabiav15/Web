@model RegisterView

<h1>Üye Ol</h1>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="register-container">
    <!-- Kayıt Formu -->
    <div class="register-form">
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Password">Şifre</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ConfirmPassword">Şifre Onayı</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Üye Ol</button>
        </form>
    </div>

    <!-- Fotoğraf ve Altındaki Yazı -->
    <div class="image-container">
        <img src="~/image/dogruyoldasın.jpg" alt="Kuaför" />
        <p class="image-caption">DOĞRU YOLDASIN!</p>
    </div>
</div>
